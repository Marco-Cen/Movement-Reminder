<?xml version="1.0" encoding="utf-8"?>
<!-- activity_read_courses -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cruddatabase.ViewExercisesDatabase">

    <!--recycler view for displaying list of exercises-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exerciseListInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="?attr/actionBarSize"
        android:translationY="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homePageBttnExercisesDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textAllCaps="false"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/DatabaseInstructionsTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:text="(Click Tile Card Below to EDIT)" />

        <Button
            android:id="@+id/addExerciseEntryBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Entry"
            android:textSize="10sp" />
    </LinearLayout>


</RelativeLayout>
