<?xml version="1.0" encoding="utf-8"?>
<!-- activity_update_course -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cruddatabase.UpdateDeleteExercisesDatabase">

    <!--Edit text to enter Exercise name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exerciseIdDisplaytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="ID: "
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/idExerciseFieldInUpdatePage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text=" (Dynamic ID)"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/addExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="UPDATING Exercise Name" />

        <EditText
            android:id="@+id/addExerciseDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="UPDATING Exercise Duration (Minutes)"
            android:inputType="number" />

        <EditText
            android:id="@+id/addExerciseNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="UPDATING Exercise Additional Notes/Description" />
    </LinearLayout>

    <!--edit text to enter exercise duration-->

    <!--edit text to display exercise additional notes/description -->


    <!--button for adding new course-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="30dp" />

        <Button
            android:id="@+id/dontChangeBttnUpdateExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Don't Change"
            android:textAllCaps="false" />

        <!--button for updating course-->
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="35dp" />

        <Button
            android:id="@+id/deleteBttnExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxWidth="85dp"
            android:minWidth="80dp"
            android:minHeight="30dp"
            android:text="Delete"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="35dp" />

        <Button
            android:id="@+id/updateBttnUpdateExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE" />
    </LinearLayout>


</LinearLayout>
