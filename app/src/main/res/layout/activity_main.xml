<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp" />

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/MakerMovePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/makermove_logo" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/PainFormBttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PainForm" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp" />

        <Button
            android:id="@+id/listOfExerciseBttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercises Activity" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp" />

        <TextView
            android:id="@+id/viewDbHomePageTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="View Database Collections:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/ViewPainDatabaseBttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joint Pains Data"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textSize="13sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="145dp" />

            <Button
                android:id="@+id/ViewExerciseDatabaseBttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercises Data"
                android:textAllCaps="false"
                android:textSize="13sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp" />


    </LinearLayout>

</LinearLayout>