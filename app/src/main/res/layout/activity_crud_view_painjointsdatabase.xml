<?xml version="1.0" encoding="utf-8"?>
<!-- activity_read_courses -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.database.CRUD_ViewDatabasePainJoints">

    <!--recycler view for displaying list of jointsPain Data entries-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/painJointDatabaseEntries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back Home"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/DatabaseInstructionsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="(Click on a Tile Card Below to EDIT)" />
    </LinearLayout>

</RelativeLayout>
